@using DIplomaProject.Frontend.Models.Dto.Order
@using DIplomaProject.Frontend.Models.Enums
@model OrderPostDto

<h2>Create Order</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="DateTime" class="control-label">DateTime</label>
        <input asp-for="DateTime" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label">Status</label>
        <select asp-for="Status" class="form-control" required>
            <option value="">-- Select Order Status --</option>
            @foreach (var status in Enum.GetValues(typeof(OrderStatus)))
            {
                    <option value="@status">@status</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label">Type</label>
        <select asp-for="Type" class="form-control" required>
            <option value="">-- Select Order Type --</option>
            @foreach (var type in Enum.GetValues(typeof(TypeOrder)))
            {
                    <option value="@type">@type</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ClientId" class="control-label">ClientId</label>
        <input asp-for="ClientId" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ServiceId" class="control-label">ServiceId</label>
        <input asp-for="ServiceId" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>




